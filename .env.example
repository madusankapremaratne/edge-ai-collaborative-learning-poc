# Environment Configuration for Edge AI Collaborative Learning Platform

# Application Settings
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/edge_ai_learning
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./edge_ai_learning.db

# LLM Configuration
LLM_PROVIDER=ollama
# Options: ollama, openai, anthropic, huggingface

# Ollama Settings (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:latest
OLLAMA_TIMEOUT=120

# OpenAI Settings (optional)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1

# Hugging Face Settings (optional)
HUGGINGFACE_API_KEY=your-hf-api-key
HUGGINGFACE_MODEL=meta-llama/Llama-2-7b-chat-hf

# LMS Integration
LMS_PROVIDER=canvas
# Options: canvas, moodle, blackboard
LMS_API_URL=https://your-institution.instructure.com/api/v1
LMS_API_KEY=your-lms-api-key
LMS_SYNC_INTERVAL=300

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENABLE_AUTHENTICATION=true

# Session Management
SESSION_COOKIE_NAME=edge_ai_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RATE_LIMIT=100

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS=false

# Agent Configuration
PERSONAL_AGENT_INACTIVITY_DAYS=3
PERSONAL_AGENT_WORKLOAD_THRESHOLD=0.5
GROUP_AGENT_IMBALANCE_THRESHOLD=0.6
INSTRUCTOR_AGENT_ALERT_THRESHOLD=0.5

# Privacy and Compliance
ENABLE_ENCRYPTION=true
FERPA_COMPLIANT_MODE=true
DATA_RETENTION_DAYS=365
ENABLE_AUDIT_LOG=true

# Monitoring and Observability
ENABLE_MONITORING=true
METRICS_PORT=9090
SENTRY_DSN=your-sentry-dsn
ENABLE_PERFORMANCE_TRACKING=true

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
ENABLE_EMAIL_NOTIFICATIONS=false

# Development Settings
MOCK_LLM_RESPONSES=false
ENABLE_SWAGGER_UI=true
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
